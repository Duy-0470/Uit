<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tipcalculator.MainActivity"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:useDefaultMargins="true" >

    <EditText
        android:id="@+id/amountEditText"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:background="@color/amount_background"
        android:cursorVisible="false"
        android:digits="0123456789"
        android:elevation="4dp"
        android:ems="10"
        android:hint="@string/enter_amount"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="@color/amount_background"
        android:textColorHighlight="@color/amount_background"
        android:textColorLink="@color/amount_background" />

    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/percentLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:text="15%" />

    <SeekBar
        android:id="@+id/percentSeekBar"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:background="#FFFFFF"
        android:backgroundTint="@color/white"
        android:max="30"
        android:progress="15"
        android:progressTint="#FF5722"
        android:thumbTint="#FF5722" />

    <TextView
        android:id="@+id/tipLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:text="@string/tip" />

    <TextView
        android:id="@+id/totalLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text="@string/total" />

    <TextView
        android:id="@+id/tipTextView"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:background="@color/tip_background"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:background="@color/tip_background"
        android:elevation="4dp" />

</GridLayout>